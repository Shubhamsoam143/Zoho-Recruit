client_id = "";
client_secret = "";
redirect_uri = "https://www.google.com/";
# Auth code generated from JobAdder Developer portal by using an url given in documentation
auth_code = "";   
headers = Map();
headers.put("Content-Type","application/x-www-form-urlencoded");
params = Map();
params.put("grant_type","authorization_code");
params.put("code",auth_code);
params.put("client_id",client_id);
params.put("client_secret",client_secret);
params.put("redirect_uri",redirect_uri);
resp = invokeurl
[
    url :"https://id.jobadder.com/connect/token"
    type :POST
    parameters:params
    headers:headers
];
info resp;
access_token = resp.get("access_token");
refresh_token = resp.get("refresh_token");
api_url = resp.get("api");
info "ACCESS TOKEN: " + access_token;
info "REFRESH TOKEN: " + refresh_token;
info "API URL: " + api_url;
return "";
